<!DOCTYPE html>
<html>
    <head>
        <title>Fincrypt</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= javascript_include_tag 'application'%>
    </head>
    <nav class="navbar-default navbar">
        <div class="container-fluid">
            <div class="navbar-collapse">
                <ul class="nav nav-pills">
                    <li class="navbar-text" role="presentation"><%= link_to "Home", home_path %></li>
                    <% if current_user %>
                    <li class="navbar-text" role="presentation"><%= link_to "Unlock", unlock_path %></li>
                    <li class="navbar-text" role="presentation"><%= link_to "Dashboard", dashboard_path %></li>
                    <li class="navbar-text" role="presentation" id="logout"><%= link_to "Log Out", logout_path %></li>
                    <!-- controller action does not use "current" parameter, but you have to pass something -->
                    <p class="navbar-text" id="WelcomeUser">Welcome:
                        <span id="welcomeUserName"><%= current_user.email %></span>
                    </p>
                <% else %>
                    <li class="navbar-text" role="presentation"><%= link_to "Sign Up", register_path %></li>
                    <li class="navbar-text" role="presentation"><%= link_to "Log In", login_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
        <% end %>
    </div>
    <body>
        <%= yield %>
    </body>
</html>
