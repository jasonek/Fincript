<div>
    <div>
        <div>
            <input type="password" placeholder="Enter decryption password" id="userkey" size="50"/>
        </div>
        <div>
            <input type="button" value="Decrypt" id="decryptButton"/>
        </div>
    </div>
    <div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" id="modalbutton" data-toggle="modal" data-target="#myModal">
            Upload Loan Data
        </button>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Upload Loan Data</h4>
                    </div>
                    <div class="modal-body">
                        <div class="upload">
                            <input type="file" id="uploadFile">
                        </div>
                        <br/>
                        <hr/>
                        <div>
                            <label>Encryption Password</label><br/>
                            <input type="password" class="form-control" placeholder="Enter encryption password" id="userkeyEncrypt"/>
                            <p id="passwordWarning">Choose a
                                <strong>strong</strong>
                                password with uppercase, lowercase, numbers, special charcters and plenty of randomness
                                <br/>
                                <strong>You must remember this password!</strong>
                                It cannot be reset or recovered, unlike normal passwords. You should probably write it down.</p>
                        </div>
                        <hr/>
                        <div>
                            <h4>Upload Preview</h4>
                            <p id="uploadPreview"></p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="encryptAndUploadToServer">Send to Server</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div id="graph">
                <canvas id="canvas"></canvas>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-list">

                <div>
                    <label>Principal:
                    </label><br/>
                    <input type="number" step="100" value="0" placeholder="Principal" id="principal"/>
                </div>
                <div>
                    <label>Interest Rate:
                    </label><br/>
                    <input type="number" class="" step="0.1" value="5.0" placeholder="Interest Rate" id="interest_rate"/>
                </div>
                <div>
                    <label>Payments per year:
                    </label>
                    <br/>
                    <input type="number" class="" step="0.1" value="12" placeholder="Compounds per year" id="compounds_per_year"/>
                </div>

                <div>
                    <label>Length of loan (in years)</label><br/>
                    <input type="number" class="" step="1.0" value="10" placeholder="Loan Length in Years" id="loan_years"/>
                </div>

                <div>
                    <label>Final Payoff Date:
                    </label><br/>
                    <input type="date" class="" value="2020-05-25" placeholder="Final Payoff Date" id="terminal_date"/>
                </div>

            </div>
        </div>
    </div>

</div>
